prefix          = @prefix@
doc_prefix      = $(prefix)/doc

LYNX=@LYNX@
LATEX=@LATEX@
PDFLATEX=@PDFLATEX@
DVIPS=@DVIPS@
PYTHON=@PYTHON@

#
# Who to install as and what modes to set
owner		= @OWNER@
group		= @GROUP@
dirmode		= 0755
confmode	= 0640
execmode	= 0755

# Commands used
INSTALL		= @INSTALL@ -o $(owner) -g $(group)
INSTALL_DATA	= @INSTALL_DATA@ -o $(owner) -g $(group)


xinstall: htmls
	for i in $(XMLS);\
	do \
		for j in $$i/*; \
		do \
			$(INSTALL_DATA) -D $$j $(doc_prefix)/$$j;\
		done; \
	done

